<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.zayano.test.Datadiri">


<LinearLayout
    android:id="@+id/activity_datadiri"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:hint="Masukkan Nama"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/editText"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:hint="Masukkan Alamat Anda"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_marginTop="17dp"
        />

    <TextView
        android:text="Pangkas dipilih :"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:padding="10dp"
        />

    <TextView
        android:text="TextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:padding="10dp"
        android:id="@+id/txt_pemangkas" />

    <TextView
        android:text="Kontak Pemangkas :"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:padding="10dp"
        android:id="@+id/txt_nomorpemangkas" />

    <TextView
        android:text="Harga :"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
         />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/txt_dewasa" />

    <TextView
        android:text="Jam Operasi :"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        />

    <TextView
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_jam"
         />

    <Button
        android:text="Setuju"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/gradient"
        android:textColor="#FFFFFFCC"
        android:textSize="20dp"
        android:id="@+id/button"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        />


</LinearLayout>
</ScrollView>